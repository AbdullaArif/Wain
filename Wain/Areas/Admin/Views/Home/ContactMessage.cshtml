@model List<Contact>
@{
    int count = 0;
}
<div class="tab-content tab-content-basic">
    <div class="tab-pane fade show active" id="overview" role="tabpanel" aria-labelledby="overview">


        <div class="row">
            <div class="col-lg-8 d-flex flex-column">
                <div class="row flex-grow">
                    <div class="col-12 grid-margin stretch-card">
                        <div class="card card-rounded">
                            <div class="card-body">
                                <div class="table-responsive  mt-1">
                                    <table class="table select-table">
                                        <thead>
                                            <tr>
                                                Contact Messages
                                            </tr>
                                            <tr>
                                                <th>No</th>
                                                <th> Name</th>
                                                <th> Email</th>
                                                <th> Number</th>
                                                <th> Subject</th>
                                                <th> Message</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                count++;
                                                <tr>
                                                    <td>
                                                        @count
                                                    </td>
                                                    <td>
                                                        <div class="d-flex ">

                                                            <div>
                                                                <h6>@item.Name </h6>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex ">

                                                            <div>
                                                                <h6>@item.Email </h6>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex ">

                                                            <div>
                                                                <h6>@item.Number </h6>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex ">

                                                            <div>
                                                                <h6>@item.Subject </h6>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex ">

                                                            <div>
                                                                <h6>@item.Message </h6>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                              @*  @if (@Model.CurrentPage != 0)
                                {
                                    <a class="btn btn-secondary mx-1" asp-action="contactmessage" asp-controller="home" asp-route-page="@(Model.CurrentPage-1)">Previous</a>
                                }
                                @for (int i = 0; i < @Model.TotalPage; i++)
                                {
                                    <a class="btn btn-secondary mx-1 @(i==Model.CurrentPage?"disabled":"")" asp-action="contactmessage" asp-controller="home" asp-route-page="@i">@(i + 1)</a>
                                }
                                @if (@Model.CurrentPage + 1 < @Model.TotalPage)
                                {
                                    <a class="btn btn-secondary mx-1" asp-action="contactmessage" asp-controller="home" asp-route-page="@(Model.CurrentPage+1)">Next</a>
                                }*@
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>