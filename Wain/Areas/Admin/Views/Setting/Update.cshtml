@using Wain.ViewModels.Settings;
@model UpdateSettingVM
<div class="content-wrapper">
    <div class="row">

        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Fill in the information</h4>
                    <form class="forms-sample"  method="post">
                        <div class="form-group">
                            <label asp-for="Key">Icon</label>
                            <input asp-for="Key" class="form-control" placeholder="Icon">
                            <span asp-validation-for="Key" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Value">Name</label>
                            <input asp-for="Value" class="form-control" placeholder="Name">
                            <span asp-validation-for="Value" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary me-2">Update</button>
                        <a asp-action="index" asp-controller="setting" class="btn btn-light">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>