@model PaginateVM<Settings>
@{
    int count = 0;
}
<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Setting</h4>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Icon
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                
                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Settings setting in Model.Items)
                                {
                                    count++;
                                    <tr class="table-info">
                                        <td>
                                            @count
                                        </td>
                                      
                                        <td>
                                            @setting.Key
                                        </td>
                                        <td>
                                            @setting.Value
                                        </td>
                                     
                                        <td>
                                            <a asp-controller="setting" asp-action="update" asp-route-id="@setting.Id" class="btn btn-warning"><i class="mdi mdi-wrench"></i> </a>
                                            <a asp-controller="setting" asp-action="delete" asp-route-id="@setting.Id" class="btn btn-danger"><i class="mdi mdi-broom"></i> </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="d-flex">
                            @if (@Model.CurrentPage != 0)
                            {
                                <a class="btn btn-secondary mx-1" asp-action="index" asp-controller="setting" asp-route-page="@(Model.CurrentPage-1)">Previous</a>
                            }
                            @for (int i = 0; i < @Model.TotalPage; i++)
                            {
                                <a class="btn btn-secondary mx-1 @(i==Model.CurrentPage?"disabled":"")" asp-action="index" asp-controller="setting" asp-route-page="@i">@(i + 1)</a>
                            }
                            @if (@Model.CurrentPage + 1 < @Model.TotalPage)
                            {
                                <a class="btn btn-secondary mx-1" asp-action="index" asp-controller="setting" asp-route-page="@(Model.CurrentPage+1)">Next</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

