@model PaginateVM<Slide>
@{
    int count = 0;
}
<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slide</h4>
                    <h5><a class="btn btn-success" asp-controller="slide" asp-action="create">Create Slide<i class="mdi mdi-clipboard-check"></i></a></h5>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Sub Title
                                    </th>
                                    <th>
                                        Order
                                    </th>
                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Slide slide in Model.Items)
                                {
                                    count++;
                                    <tr class="table-info">
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                            <img style="width:220px;height:100px;" src="~/assets/img/@slide.Image"/>
                                    </td>
                                    <td>
                                        @slide.Title
                                    </td>
                                    <td>
                                       @slide.SubTitle
                                    </td>
                                    <td>
                                        @slide.Order
                                    </td>
                                    <td>
                                            <a asp-controller="slide" asp-action="update" asp-route-id="@slide.Id" class="btn btn-warning"><i class="mdi mdi-wrench"></i> </a>
                                            <a asp-controller="slide" asp-action="delete" asp-route-id="@slide.Id" class="btn btn-danger"><i class="mdi mdi-broom"></i> </a>
                                     </td>
                                </tr>  
                                }
                            </tbody>
                        </table>
                        <div class="d-flex">
                            @if (@Model.CurrentPage != 0)
                            {
                                <a class="btn btn-secondary mx-1" asp-action="index" asp-controller="slide" asp-route-page="@(Model.CurrentPage-1)">Previous</a>
                            }
                            @for (int i = 0; i < @Model.TotalPage; i++)
                            {
                                <a class="btn btn-secondary mx-1 @(i==Model.CurrentPage?"disabled":"")" asp-action="index" asp-controller="slide" asp-route-page="@i">@(i + 1)</a>
                            }
                            @if (@Model.CurrentPage + 1 < @Model.TotalPage)
                            {
                                <a class="btn btn-secondary mx-1" asp-action="index" asp-controller="slide" asp-route-page="@(Model.CurrentPage+1)">Next</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
