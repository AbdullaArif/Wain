@using Wain.ViewModels.Account;
@model LoginVM
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Wain - Rent a Car</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Formassets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Formassets/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/Formassets/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Formassets/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <!-- partial:../../partials/_navbar.html -->
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_sidebar.html -->
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">

                        <div class="col-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Login</h4>

                                    <form class="forms-sample" method="post" >
                                        <div class="col-md-12">
                                            <label asp-for="UsernameOrEmail">Username Or Email</label>
                                            <input asp-for="UsernameOrEmail" placeholder="Username Or Email" />
                                            <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                                        </div>
                                        <br />
                                        <div class="col-md-12">
                                            <label asp-for="Password">Password</label>
                                            <input asp-for="Password" placeholder="Password" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div> <br />
                                        <div class="col-md-12 d-flex flex-row">
                                            <label asp-for="IsRemember">Remember me</label>
                                            <input asp-for="IsRemember" />
                                            
                                        </div>
                                        <div class="text-danger" asp-validation-summary="ModelOnly">
                                        </div> <br />
                                        <div class="col-12">
                                            <button type="submit" class="btn btn-primary me-2">Login</button>
                                            <a asp-area="" asp-controller="home" asp-action="index" class="btn btn-light">Cancel</a>
                                        </div><br />
                                        <div class="col-12">
                                            <span>
                                                <a asp-controller="account" asp-action="forgotpassword" class="btn btn-danger">Forgot Password?</a>
                                            </span>
                                            <br />
                                            <br />
                                            <span>
                                                <a asp-controller="account" asp-action="register" class="btn btn-success">Don't have an account?</a>
                                            </span>
                                        </div>
                                        <div class="col-12">
                                           
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- content-wrapper ends -->
                <!-- partial:../../partials/_footer.html -->
                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                    </div>
                </footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/Formassets/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/Formassets/js/off-canvas.js"></script>
    <script src="~/Formassets/js/hoverable-collapse.js"></script>
    <script src="~/Formassets/js/template.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/Formassets/js/file-upload.js"></script>
    <!-- End custom js for this page-->
</body>

</html>
