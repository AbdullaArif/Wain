	Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Wain - Rent a Car</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Formassets/vendors/mdi/css/materialdesignicons.min.css">
