                    <!-- main slider carousel items -->
                    <div class="carousel-inner">
                        <div class="active item carousel-item" data-slide-number="0">
                            <img src="~/assets/img/@Model.Car.CarImages.FirstOrDefault(ca=>ca.IsPrimary==true)?.Image" class="img-fluid" alt="car-Slider">
                        </div>
                    </div>
                    <!-- main slider carousel nav controls -->
                    <ul class="carousel-indicators smail-car list-inline nav nav-justified">

                        @foreach (var item in Model.Car.CarImages.Where(ci => ci.IsPrimary == false))
                        {
                            <li class="list-inline-item">
                                <a id="carousel-selector-1" data-slide-to="1" data-target="#carDetailsSlider">
                                    <img src="~/assets/img/@item.Image" class="img-fluid" alt="sub-car">
                                </a>
                            </li>
                        }
                    </ul>
                    <div class="heading-car">
                        <div class="row">
                           
